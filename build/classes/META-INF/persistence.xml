<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="mes" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>br.com.controle.mes.model.Menu</class>
		<class>br.com.controle.mes.model.Perfil</class>
		<class>br.com.controle.mes.model.Tarefa</class>
		<class>br.com.controle.mes.model.Usuario</class>
		<class>br.com.controle.mes.model.ConfiguracaoPorta</class>
		<class>br.com.controle.mes.model.TipoDispositivo</class>
		<class>br.com.controle.mes.model.Dispositivo</class>


		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/mes" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>

	</persistence-unit>
</persistence>